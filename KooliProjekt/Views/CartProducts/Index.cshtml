@model CartProductsIndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Cart Products</h2>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method="get">
    <input type="text" name="Search.ProductName" value="@Model.Search?.ProductName" placeholder="Product Name" />
    <input type="number" name="Search.MinQuantity" value="@Model.Search?.MinQuantity" placeholder="Min Quantity" />
    <input type="number" name="Search.MaxQuantity" value="@Model.Search?.MaxQuantity" placeholder="Max Quantity" />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Cart</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data.Results)
        {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Quantity</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    @(await Component.InvokeAsync<PagerViewComponent>(Model.Data))
</div>

