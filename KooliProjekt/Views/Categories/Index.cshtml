@model PagedResult<Category>

<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Category in Model.Results)
        {
            <tr>
                <td>@Category.Name</td>
                <td>@Category.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Category.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@Category.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@Category.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @(await Component.InvokeAsync<PagerViewComponent>(Model))
</div>
