<Window x:Class="KooliProjekt.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KooliProjekt.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"></ColumnDefinition>
            <ColumnDefinition Width="400"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DataGrid 
            x:Name="TodoListsGrid" 
            d:ItemsSource="{d:SampleData ItemCount=10}"
            ItemsSource="{Binding Lists}"
            SelectedItem="{Binding SelectedList}"
        />

        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10">
            <TextBlock>ID</TextBlock>
            <TextBlock Text="{Binding SelectedList.Id}"></TextBlock>
            <TextBlock>Title</TextBlock>
            <TextBox Text="{Binding SelectedList.Title}"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="5">New</Button>
                <Button Margin="5" Command="{Binding SaveCommand}">Save</Button>
                <Button Margin="5" Command="{Binding DeleteCommand}">Delete</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
